@model IEnumerable<EmprestimoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Emprestimo</h1>
        <a asp-controller="Emprestimo" asp-action="Cadastrar" class="btn btn-success mx-2">Cadastrar novo Emprestimo</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-dark" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Recebedor</th>
                    <th scope="col">Fornecedor</th>
                    <th scope="col">LivroEmprestado</th>
                    <th scope="col">DataEmprestimo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Recebedor</td>
                        <td>@item.Fornecedor</td>
                        <td>@item.LivroEmprestado</td>
                        <td>@item.DataEmprestimo</td>
                        <td class="d-flex">
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning mx-2">Editar</a>
                            <form method="post" asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@item.Id">
                                <input type="hidden" asp-for="@item.Id" />
                                <button type="submit" class="btn btn-danger mx-2">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nenhum item Cadastrado </p>
    }
</div>
